<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context="com.example.liam.saferjourneymockup.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safer Journeys"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:layout_marginBottom="80dp"/>
    <Button
        android:id="@+id/main_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Start"
        android:gravity="center"
        android:background="@drawable/round_btn"
        android:textSize="50sp"/>

    <!--<Button-->
        <!--android:id="@+id/main_nav_btn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:paddingStart="20dp"-->
        <!--android:paddingEnd="20dp"-->
        <!--android:paddingTop="15dp"-->
        <!--android:paddingBottom="15dp"-->
        <!--android:text="Navigation"-->
        <!--android:gravity="center"-->
        <!--android:background="@drawable/round_btn"-->
        <!--android:textSize="40sp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your points:"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/main_points_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/textColorPrimary"
            android:textSize="35sp"
            android:textStyle="bold" />

    </LinearLayout>
    <Button
        android:id="@+id/main_dashboard_btn"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View dashboard"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:background="@drawable/dashboard_btn"/>
</LinearLayout>
