<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd = "15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/cv_rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <ImageView
                android:src="@drawable/user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/cv_user_photo"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/cv_rank_tv"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cv_user_name"
                android:layout_centerVertical="true"
                android:text="Peter"
                android:layout_toEndOf="@+id/cv_user_photo"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/cv_user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="999999999"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_marginEnd="30dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>